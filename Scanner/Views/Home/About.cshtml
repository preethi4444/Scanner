    <style>
        .pass_show {
            position: relative
        }

            .pass_show .ptxt {
                position: absolute;
                top: 50%;
                right: 10px;
                z-index: 1;
                color: #f36c01;
                margin-top: -10px;
                cursor: pointer;
                transition: .3s ease all;
            }

                .pass_show .ptxt:hover {
                    color: #333333;
                }

        .card {
            margin: 0 auto;
            float: none;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="card" style="margin:226px 0 0 25%">
        <div class="container">
            <form name="f1">
                <div class="col-sm-6">

                    @*<label>Current Password</label>
                    <div class="form-group pass_show">
                        <input type="password" name="p1" class="form-control" placeholder="Current Password">
